<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.example.trainlivelocation.ui.SettingsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Settings"
        android:orientation="vertical"
        android:background="@color/DarkPrimaryColor">

        <TextView
            android:drawableStart="@drawable/notifications"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_10sdp" />

        <LinearLayout
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/alarm_icon_notifiction"
                android:drawablePadding="@dimen/_10sdp"
                android:gravity="start|center"
                android:text="Stations History Notification"
                android:textColor="@color/textHintColorFirst"
                android:textSize="@dimen/_12ssp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/settings_stationHistroyAlarms_switchBtn"
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1.8"
                app:useMaterialThemeColors="false" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/PrimaryColor"
            android:layout_marginHorizontal="@dimen/_15sdp" />

        <LinearLayout
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/alarm_icon_notifiction"
                android:drawablePadding="@dimen/_10sdp"
                android:gravity="start|center"
                android:text="Posts Notification"
                android:textColor="@color/textHintColorFirst"
                android:textSize="@dimen/_12ssp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/settings_postNotification_switchBtn"
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1.8"
                app:useMaterialThemeColors="false" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/PrimaryColor"
            android:layout_marginHorizontal="@dimen/_15sdp" />

        <LinearLayout
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/alarm_icon_notifiction"
                android:drawablePadding="@dimen/_10sdp"
                android:gravity="start|center"
                android:text="Posts Comments Notification"
                android:textColor="@color/textHintColorFirst"
                android:textSize="@dimen/_12ssp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/settings_postCommentsNotification_switchBtn"
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1.8"
                app:useMaterialThemeColors="false" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/PrimaryColor"
            android:layout_marginHorizontal="@dimen/_15sdp" />

        <LinearLayout
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/alarm_icon_notifiction"
                android:drawablePadding="@dimen/_10sdp"
                android:gravity="start|center"
                android:text="Messages Notification"
                android:textColor="@color/textHintColorFirst"
                android:textSize="@dimen/_12ssp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/settings_MessagesNotification_switchBtn"
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1.8"
                app:useMaterialThemeColors="false" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/PrimaryColor"
            android:layout_marginHorizontal="@dimen/_15sdp" />

        <TextView
            android:drawableStart="@drawable/location_icon"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locations"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_10sdp" />

        <LinearLayout
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/alarm_icon_notifiction"
                android:drawablePadding="@dimen/_10sdp"
                android:gravity="start|center"
                android:text="Sharing Location"
                android:textColor="@color/textHintColorFirst"
                android:textSize="@dimen/_12ssp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/settings_StopSharingLocation_switchBtn"
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1.8"
                app:useMaterialThemeColors="false" />
        </LinearLayout>

    </LinearLayout>
</layout>