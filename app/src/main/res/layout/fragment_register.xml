<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewmodel"
            type="com.example.trainlivelocation.ui.UserRegisterViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context=".ui.Register">

            <LinearLayout
                android:id="@+id/appCompatEditText"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:minHeight="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <!--displaying a radio group on below line-->
                <RadioGroup
                    android:checkedButton="@{viewmodel.Gender_redio_checked}"
                    android:orientation="horizontal"
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center">

                    <RadioButton
                        android:drawableRight="@drawable/ic_baseline_male_24"
                        android:buttonTint="@color/basicColor"
                        android:layout_weight="1"
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:padding="4dp"
                        android:textColor="@color/basicColor"
                        android:text="Male"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <RadioButton
                        android:drawableRight="@drawable/ic_baseline_female_24"
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:buttonTint="@color/basicColor"
                        android:checked="false"
                        android:padding="4dp"
                        android:text="Female"
                        android:textAlignment="center"
                        android:textColor="@color/basicColor"
                        android:textSize="20sp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="10dp"
                android:id="@+id/spinner_jop_menu_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/pass"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:gravity="center"
                    android:drawableLeft="@drawable/jop_icon"
                    android:layout_marginEnd="10dp"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Jop"
                    android:textSize="18sp"
                    android:textColor="@color/textHintColorFirst" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/register_spinner_background_shape"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/Register_spinner_jobs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:spinnerMode="dropdown"
                        android:selectedItemPosition="@={viewmodel.jopSpinnerSelectedPosition}" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/spinner_drop_icon" />

                </RelativeLayout>


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_textfield_selector"
                android:drawableLeft="@drawable/name_icon"
                android:drawablePadding="10dp"
                android:hint="Name"
                android:minHeight="48dp"
                android:padding="10dp"
                android:text="@={viewmodel.userName}"
                android:textColor="#FF0000"
                android:textColorHint="@color/textHintColorFirst"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/spinner_jop_menu_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_textfield_selector"
                android:drawableLeft="@drawable/phone_icon"
                android:drawablePadding="10dp"
                android:hint="Phone"
                android:inputType="phone"
                android:minHeight="48dp"
                android:padding="10dp"
                android:text="@={viewmodel.userPhone}"
                android:textColor="#FF0000"
                android:textColorHint="@color/textHintColorFirst"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/login_textfield_selector"
                android:drawableLeft="@drawable/email_icon"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:padding="10dp"
                android:text="@={viewmodel.userEmail}"
                android:textColor="#FF0000"
                android:textColorHint="@color/textHintColorFirst"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/appCompatEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/login_textfield_selector"
                android:drawableLeft="@drawable/password_icon"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:padding="10dp"
                android:text="@={viewmodel.userPassword}"
                android:textColorHint="@color/textHintColorFirst"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="#FF0000" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/Register_btn_date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/login_textfield_selector"
                android:drawableLeft="@drawable/date_icon"
                android:drawablePadding="10dp"
                android:hint="Birthdate"
                android:minHeight="48dp"
                android:padding="5dp"
                android:text="@={viewmodel.userBirthDate}"
                android:textColor="#FF0000"
                android:textColorHint="@color/textHintColorFirst"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatEditText"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="80dp"
                android:background="@drawable/login_btn_selector"
                android:gravity="center"
                android:onClick="@{ viewmodel::onBtnRegisterClick}"
                android:padding="10dp"
                android:text="Register"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Register_btn_date_picker"
                app:layout_constraintVertical_bias="0.141" />


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="80dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Don't have account ?"
                    android:textColor="@color/textHintColorSecond"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="2dp"
                    android:text="Login"
                    android:textColor="@color/basicColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>
    <ProgressBar
        android:id="@+id/register_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
