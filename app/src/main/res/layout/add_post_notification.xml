<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    android:id="@+id/addPostNotificationID">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/all_posts"
        />

    <TextView
        android:id="@+id/doctor_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/doctor_notification_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_toEndOf="@+id/imageView3"
        android:text="New Post"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/doctor_notification_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_toEndOf="@+id/imageView3"
        android:text="Train Id : 916"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />
</RelativeLayout>