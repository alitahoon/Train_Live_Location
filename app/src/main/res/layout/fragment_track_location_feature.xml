<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.example.trainlivelocation.ui.TrackLocationFeatureViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.TrackLocationFeature"
        android:background="@color/white"
        android:orientation="vertical">
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="match_parent"
            android:id="@+id/track_Location_progress_bar"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible"
            style="@style/Widget.MaterialComponents.LinearProgressIndicator"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_28sdp"
            android:textColorHint="@color/textHintColorFirst"
            app:boxStrokeColor="@color/basicColor"
            app:boxStrokeWidth="@dimen/_1sdp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Register_btn_date_picker"
                android:layout_width="match_parent"
                android:gravity="center|start"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/train_id_txt"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Train Id"
                android:minHeight="@dimen/_48sdp"
                android:text="@={viewmodel.trainid}"
                android:textColor="@color/textAlarmColor"
                android:textColorHint="@color/textHintColorFirst"
                android:textSize="@dimen/_18ssp" />
        </com.google.android.material.textfield.TextInputLayout>

<!--        <com.google.android.material.button.MaterialButton-->
<!--            android:id="@+id/liveLocation_TrackTrainLocation"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginHorizontal="80dp"-->
<!--            android:onClick="@{viewmodel::onBtnTrackTrainLocationClicked}"-->
<!--            android:padding="15dp"-->
<!--            android:text="Track Location"-->
<!--            android:textSize="14sp"-->
<!--            android:textColor="@color/white"-->
<!--            app:cornerRadius="30dp" />-->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/liveLocation_ShareTrainLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_80sdp"
            android:onClick="@{viewmodel::onBtnTrackTrainLocationClicked}"
            android:padding="@dimen/_15sdp"
            android:text="Track Location"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/_30sdp" />



    </LinearLayout>
</layout>