<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewmodel"
            type="com.example.trainlivelocation.ui.UserSignUpViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:background="@drawable/splash_fragment_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.Sign_up"
            android:orientation="vertical"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@drawable/splash_fragment_background"
                android:id="@+id/signUp_secondPhaseLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_jop_menu_layout">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{()->viewmodel.onClickMale()}"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/basicColor"
                        android:checked="false"
                        android:drawableRight="@drawable/ic_baseline_male_24"
                        android:padding="4dp"
                        android:text="Male"
                        android:textAlignment="center"
                        android:textColor="@color/basicColor"
                        android:textSize="16sp" />

                    <RadioButton
                        android:onClick="@{()->viewmodel.onClickFemale()}"
                        android:id="@+id/female"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/basicColor"
                        android:checked="false"
                        android:drawableRight="@drawable/ic_baseline_female_24"
                        android:padding="4dp"
                        android:text="Female"
                        android:textAlignment="center"
                        android:textColor="@color/basicColor"
                        android:textSize="16sp" />

                </RadioGroup>

                <LinearLayout
                    android:id="@+id/spinner_jop_menu_layout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="30dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:drawableLeft="@drawable/jop_icon"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="Jop"
                        android:textColor="@color/textHintColorFirst"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/register_spinner_background_shape"
                        android:orientation="horizontal">


                        <Spinner
                            android:id="@+id/Register_spinner_jobs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:background="@android:color/transparent"
                            android:entries="@array/jopsArray"
                            android:gravity="center"
                            android:selectedItemPosition="@={viewmodel.jopSpinnerSelectedPosition}"
                            android:spinnerMode="dropdown" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:src="@drawable/spinner_drop_icon" />

                    </RelativeLayout>


                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/signUp_txt_birthdate_tablayout"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4"
                    android:textColorHint="@color/textHintColorFirst"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radioGroup" >
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/Register_btn_date_picker"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableLeft="@drawable/date_icon"
                        android:drawablePadding="10dp"
                        android:hint="Birthdate"
                        android:minHeight="48dp"
                        android:padding="5dp"
                        android:text="@={viewmodel.userBirthDate}"
                        android:textColor="@color/textAlarmColor"
                        android:textColorHint="@color/textHintColorFirst"
                        android:textSize="18sp"
                        />
                </com.google.android.material.textfield.TextInputLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/signUp_firstPhaseLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/splash_fragment_background"
                tools:context=".ui.SignUp">


                <!--            <androidx.appcompat.widget.AppCompatButton-->
                <!--                android:id="@+id/register"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginHorizontal="80dp"-->
                <!--                android:background="@drawable/login_btn_selector"-->
                <!--                android:gravity="center"-->
                <!--                android:onClick="@{ viewmodel::onBtnRegisterClick}"-->
                <!--                android:padding="10dp"-->
                <!--                android:text="Register"-->
                <!--                android:textColor="@color/white"-->
                <!--                android:textSize="18sp"-->
                <!--                android:textStyle="bold"-->
                <!--                app:layout_constraintBottom_toBottomOf="parent"-->
                <!--                app:layout_constraintEnd_toEndOf="parent"-->
                <!--                app:layout_constraintStart_toStartOf="parent"-->
                <!--                app:layout_constraintTop_toBottomOf="@+id/Register_btn_date_picker"-->
                <!--                app:layout_constraintVertical_bias="0.141" />-->

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/signUp_txt_name_input_layout"
                    android:layout_marginVertical="24dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="28dp"
                    android:padding="10dp"
                    android:textColorHint="@color/textHintColorFirst"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signUp_txt_phone_input_layout" >
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/sign_up_txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:backgroundTint="@color/basicColor"
                        android:drawableLeft="@drawable/name_icon"
                        android:drawablePadding="10dp"
                        android:hint="Name"
                        android:text="@={viewmodel.userName}"
                        android:textColor="#FF0000"
                        android:textSize="16sp"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signUp_txt_phone_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColorHint="@color/textHintColorFirst"
                    android:backgroundTint="@color/basicColor">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/phone"
                        android:backgroundTint="@color/basicColor"
                        android:padding="10dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableLeft="@drawable/phone_icon"
                        android:drawablePadding="10dp"
                        android:hint="Phone"
                        android:inputType="phone"
                        android:text="@={viewmodel.userPhone}"
                        android:textColor="#FF0000"
                        android:textSize="16sp"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/signUp_txt_email_input_layout"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signUp_txt_password_input_Layout"
                    app:layout_constraintVertical_bias="0.0"
                    android:textColorHint="@color/textHintColorFirst">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:backgroundTint="@color/basicColor"
                        android:layout_height="48dp"

                        android:drawableLeft="@drawable/email_icon"
                        android:drawablePadding="10dp"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        android:text="@={viewmodel.userEmail}"
                        android:textColor="#FF0000"
                        android:textSize="16sp"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="24dp"
                    android:id="@+id/signUp_txt_password_input_Layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColorHint="@color/textHintColorFirst"
                    app:layout_constraintTop_toBottomOf="@+id/signUp_txt_name_input_layout"
                    >
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/signUp_txt_pass"
                        android:backgroundTint="@color/basicColor"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"

                        android:drawableLeft="@drawable/password_icon"
                        android:drawablePadding="10dp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        android:text="@={viewmodel.userPassword}"
                        android:textColor="#FF0000"
                        android:textSize="16sp"
                        />
                </com.google.android.material.textfield.TextInputLayout>



                <!--                    <ProgressBar-->
                <!--                        android:id="@+id/register_progress_bar"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="match_parent"-->
                <!--                        android:visibility="gone" />-->

            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/next"
                    android:textAllCaps="true"
                    android:textColor="@color/headline_color"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/sign_up_btn_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:background="@drawable/signin_fragment_btn_shape"
                    android:onClick="@{ viewmodel::onBtnRegisterClick}"
                    android:src="@drawable/arrow_left_icon" />

            </LinearLayout>

            <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        android:gravity="right"
        android:text="have an account ?"
        android:textColor="@color/textHintColorSecond"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUp_firstPhaseLayout" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:text="@string/sign_in"
        android:textColor="@color/basicColor"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>


