<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sign_up"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/signup_txt_username"
        android:drawableEnd="@drawable/username_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:drawablePadding="5dp"
        android:background="@drawable/signin_fragment_txt_selector"
        android:textColorHint="@color/new_UI_color"
        tools:layout_editor_absoluteX="50dp"
        android:layout_marginHorizontal="50dp"
        android:hint="@string/username"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/signup_txt_email"
        android:drawableEnd="@drawable/email_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:hint="@string/email"
        android:textColorHint="@color/new_UI_color"
        tools:layout_editor_absoluteX="50dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:drawablePadding="5dp"
        android:background="@drawable/signin_fragment_txt_selector"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/signup_txt_phone"
        android:drawableEnd="@drawable/phone_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:hint="@string/phone"
        android:textColorHint="@color/new_UI_color"
        tools:layout_editor_absoluteX="50dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:drawablePadding="5dp"
        android:background="@drawable/signin_fragment_txt_selector"
        android:layout_marginTop="30dp"/>

    <Spinner
        android:id="@+id/signup_spinner_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="50dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:drawablePadding="5dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        />

