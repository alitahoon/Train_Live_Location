<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.example.trainlivelocation.ui.ShareLocationViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ShareLocationFeature"
        android:background="@color/white">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:layout_marginTop="28dp"
            android:textColorHint="@color/textHintColorFirst"
            app:boxStrokeColor="@color/basicColor"
            app:boxStrokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Register_btn_date_picker"
                android:layout_width="match_parent"
                android:gravity="center|start"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/train_id_txt"
                android:drawablePadding="10dp"
                android:hint="Train Id"
                android:minHeight="48dp"
                android:text="@={viewmodel.trainId}"
                android:textColor="@color/textAlarmColor"
                android:textColorHint="@color/textHintColorFirst"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/liveLocation_ShareTrainLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:onClick="@{viewmodel::onBtnShareTrainLocationClicked}"
            android:padding="15dp"
            android:text="Share Location"
            android:textSize="14sp"
            android:textColor="@color/white"
            app:cornerRadius="30dp" />

        <TextView
            android:id="@+id/shareLocation_txt_para"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:visibility="gone"
            android:gravity="start"
            android:background="@color/fourth"
            android:padding="10dp"
            android:lineHeight="30dp"
            android:text="@string/share_location_para"
            android:textSize="16sp"
            />
        <com.airbnb.lottie.LottieAnimationView
            app:lottie_autoPlay="true"
            android:visibility="gone"
            android:layout_width="200dp"
            android:id="@+id/shareLocation_lotti"
            android:layout_height="200dp"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            app:lottie_rawRes="@raw/location_share_success"
            />

    </LinearLayout>
</layout>