<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.example.trainlivelocation.ui.ShareLocationViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ShareLocationFeature"
        android:background="@color/white">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_28sdp"
            android:textColorHint="@color/textHintColorFirst"
            app:boxStrokeColor="@color/basicColor"
            app:boxStrokeWidth="@dimen/_1sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Register_btn_date_picker"
                android:layout_width="match_parent"
                android:gravity="center|start"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/train_id_txt"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Train Id"
                android:minHeight="@dimen/_48sdp"
                android:text="@={viewmodel.trainId}"
                android:textColor="@color/textAlarmColor"
                android:textColorHint="@color/textHintColorFirst"
                android:textSize="@dimen/_18ssp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/liveLocation_ShareTrainLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_80sdp"
            android:onClick="@{viewmodel::onBtnShareTrainLocationClicked}"
            android:padding="@dimen/_15sdp"
            android:text="Share Location"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/_30sdp" />

        <TextView
            android:id="@+id/shareLocation_txt_para"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:visibility="gone"
            android:gravity="start"
            android:background="@color/fourth"
            android:padding="@dimen/_10sdp"
            android:lineHeight="@dimen/_30sdp"
            android:text="@string/share_location_para"
            android:textSize="@dimen/_16ssp"
            />
        <com.airbnb.lottie.LottieAnimationView
            app:lottie_autoPlay="true"
            android:visibility="gone"
            android:layout_width="@dimen/_200sdp"
            android:id="@+id/shareLocation_lotti"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            app:lottie_rawRes="@raw/location_share_success"
            />

    </LinearLayout>
</layout>