<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.example.trainlivelocation.ui.Alarms_viewModel" />
        <variable
            name="adapter"
            type="com.example.trainlivelocation.utli.StationAlarmAdapterCustomAdapter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/DarkPrimaryColor"
        tools:context=".ui.Alarms"
        android:padding="@dimen/_10sdp">

        <androidx.recyclerview.widget.RecyclerView
            setAlarmsAdapter="@{adapter}"
            android:id="@+id/alarms_rcv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/alarm_btn_add_station_alarm"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            tools:listitem="@layout/alarms_item_layout">

        </androidx.recyclerview.widget.RecyclerView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/alarm_btn_add_station_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:textAllCaps="true"
            android:text="Add Other Station"
            android:textColor="@color/white"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:iconGravity="end"
            android:elevation="@dimen/_15sdp"
            android:backgroundTint="@color/PrimaryColor"
            app:icon="@drawable/baseline_add_24"
            app:iconTint="@color/white" />

    </RelativeLayout>
</layout>