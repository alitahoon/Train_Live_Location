<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Logo_loading"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <ImageView
        android:id="@+id/logo_loadingLogo"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/app_logo2"/>
    <TextView
        android:id="@+id/logo_loading_txtTitle"
        android:layout_width="wrap_content"
        android:drawablePadding="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="center"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        android:drawableStart="@drawable/live_icon"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/DarkPrimaryColor"/>


</LinearLayout>