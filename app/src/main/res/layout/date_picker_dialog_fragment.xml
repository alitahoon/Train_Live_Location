<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/DarkPrimaryColor">

    <DatePicker
        android:headerBackground="@color/DarkPrimaryColor"
        android:id="@+id/date_picker_dialog_cal_dateOfBirth"
        android:layout_width="wrap_content"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:layout_marginTop="@dimen/_37sdp"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:background="@color/PrimaryColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/DarkPrimaryColor"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:backgroundTint="@color/PrimaryColor"

            android:id="@+id/date_picker_btn_ok"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/date_picker_btn_cancel"
            android:textColor="@color/white"
            android:backgroundTint="@color/textAlarmColor"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"/>
    </LinearLayout>


</LinearLayout>